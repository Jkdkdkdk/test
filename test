        // DOM элементы
        const authButtons = document.getElementById('auth-buttons');
        const userMenu = document.getElementById('user-menu');
        const userName = document.getElementById('user-name');
        const loginBtn = document.getElementById('login-btn');
        const registerBtn = document.getElementById('register-btn');
        const dashboardBtn = document.getElementById('dashboard-btn');
        const logoutBtn = document.getElementById('logout-btn');
        const loginForm = document.getElementById('login-form');
        const registerForm = document.getElementById('register-form');
        const loginFormData = document.getElementById('login-form-data');
        const registerFormData = document.getElementById('register-form-data');
        const switchToRegister = document.getElementById('switch-to-register');
        const switchToLogin = document.getElementById('switch-to-login');
        const showProductsBtn = document.getElementById('show-products');
        const productsContainer = document.getElementById('products-container');
        const cartItems = document.getElementById('cart-items');
        const cartTotal = document.getElementById('cart-total');
        const checkoutBtn = document.getElementById('checkout-btn');
        const orderItems = document.getElementById('order-items');
        const orderTotal = document.getElementById('order-total');
        const paymentMethods = document.querySelectorAll('.payment-method');
        const paymentDetails = document.querySelectorAll('.payment-details');
        const confirmPaymentBtn = document.getElementById('confirm-payment');
        const paymentScreenshot = document.getElementById('payment-screenshot');
        const fileName = document.getElementById('file-name');
        const chatMessages = document.getElementById('chat-messages');
        const chatInput = document.getElementById('chat-input');
        const sendMessageBtn = document.getElementById('send-message');
        const usersTableBody = document.getElementById('users-table-body');
        const adminOrders = document.getElementById('admin-orders');
        const ordersHistory = document.getElementById('orders-history');
        const categoryTabs = document.querySelectorAll('.category-tab');
        const cartBadge = document.getElementById('cart-badge');
        const faqItems = document.querySelectorAll('.faq-item');
        const yoomoneyPayBtn = document.getElementById('yoomoney-pay-btn');
        
        // Страницы
        const homePage = document.getElementById('home-page');
        const productsPage = document.getElementById('products-page');
        const cartPage = document.getElementById('cart-page');
        const ordersPage = document.getElementById('orders-page');
        const contactsPage = document.getElementById('contacts-page');
        const reviewsPage = document.getElementById('reviews-page');
        const faqPage = document.getElementById('faq-page');
        const paymentPage = document.getElementById('payment-page');
        const chatPage = document.getElementById('chat-page');
        const adminPage = document.getElementById('admin-page');
        
        // Навигационные ссылки
        const navLinks = document.querySelectorAll('.nav-link');
        
        // Инициализация приложения
        function initApp() {
            updateAuthUI();
            loadProducts('random');
            updateCartUI();
            loadUsersTable();
            loadAdminOrders();
            loadOrdersHistory();
            updateCartBadge();
            
            // Если пользователь администратор, добавляем ссылку на админ-панель
            if (currentUser && currentUser.isAdmin) {
                const adminLink = document.createElement('a');
                adminLink.href = '#';
                adminLink.className = 'nav-link';
                adminLink.dataset.page = 'admin';
                adminLink.textContent = 'Админ-панель';
                document.querySelector('.nav').appendChild(adminLink);
                
                // Обновляем навигационные ссылки
                document.querySelectorAll('.nav-link').forEach(link => {
                    if (link.dataset.page) {
                        link.addEventListener('click', handleNavClick);
                    }
                });
            }
            
            // Назначаем обработчики событий
            setupEventListeners();
        }
        
        // Назначение обработчиков событий
        function setupEventListeners() {
            // Авторизация
            loginBtn.addEventListener('click', () => {
                loginForm.classList.add('active');
                registerForm.classList.remove('active');
            });
            
            registerBtn.addEventListener('click', () => {
                registerForm.classList.add('active');
                loginForm.classList.remove('active');
            });
            
            logoutBtn.addEventListener('click', logout);
            
            loginFormData.addEventListener('submit', (e) => {
                e.preventDefault();
                login();
            });
            
            registerFormData.addEventListener('submit', (e) => {
                e.preventDefault();
                register();
            });
            
            switchToRegister.addEventListener('click', (e) => {
                e.preventDefault();
                registerForm.classList.add('active');
                loginForm.classList.remove('active');
            });
            
            switchToLogin.addEventListener('click', (e) => {
                e.preventDefault();
                loginForm.classList.add('active');
                registerForm.classList.remove('active');
            });
            
            // Навигация
            navLinks.forEach(link => {
                if (link.dataset.page) {
                    link.addEventListener('click', handleNavClick);
                }
            });
            
            // Категории товаров
            categoryTabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    categoryTabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');
                    const category = tab.dataset.category;
                    loadProducts(category);
                });
            });
            
            // Покупки
            showProductsBtn.addEventListener('click', () => {
                if (!currentUser) {
                    alert('Для просмотра товаров необходимо войти в аккаунт');
                    loginForm.classList.add('active');
                    return;
                }
                showPage('products');
            });
            
            dashboardBtn.addEventListener('click', () => {
                showPage('cart');
            });
            
            checkoutBtn.addEventListener('click', checkout);
            
            // Оплата
            paymentMethods.forEach(method => {
                method.addEventListener('click', () => {
                    paymentMethods.forEach(m => m.classList.remove('active'));
                    paymentDetails.forEach(d => d.classList.remove('active'));
                    method.classList.add('active');
                    const methodType = method.dataset.method;
                    document.getElementById(`${methodType}-details`).classList.add('active');
                });
            });
            
            paymentScreenshot.addEventListener('change', (e) => {
                const file = e.target.files[0];
                if (file) {
                    fileName.textContent = `Выбран файл: ${file.name}`;
                }
            });
            
            confirmPaymentBtn.addEventListener('click', confirmPayment);
            
            // Кнопка оплаты через Юмани
            yoomoneyPayBtn.addEventListener('click', () => {
                const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
                const yoomoneyUrl = `https://yoomoney.ru/quickpay/confirm.xml?receiver=4100119001704075&quickpay-form=shop&targets=Оплата заказа Akkaunti-Shop&sum=${total}&label=order_${Date.now()}`;
                window.open(yoomoneyUrl, '_blank');
                alert('После оплаты через Юмани пришлите скриншот чека в чат с менеджером');
            });
            
            // Чат
            sendMessageBtn.addEventListener('click', sendMessage);
            
            // FAQ
            faqItems.forEach(item => {
                item.addEventListener('click', () => {
                    item.classList.toggle('active');
                });
            });
        }
        
        // Обновление UI авторизации
        function updateAuthUI() {
            if (currentUser) {
                authButtons.style.display = 'none';
                userMenu.style.display = 'flex';
                userName.textContent = currentUser.name;
                loginForm.classList.remove('active');
                registerForm.classList.remove('active');
            } else {
                authButtons.style.display = 'flex';
                userMenu.style.display = 'none';
            }
        }
        
        // Обновление бейджа корзины
        function updateCartBadge() {
            const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
            cartBadge.textContent = totalItems;
            if (totalItems > 0) {
                cartBadge.style.display = 'flex';
            } else {
                cartBadge.style.display = 'none';
            }
        }
        
        // Загрузка товаров по категориям
        function loadProducts(category) {
            productsContainer.innerHTML = '';
            
            const filteredProducts = products.filter(product => product.category === category);
            
            if (filteredProducts.length === 0) {
                productsContainer.innerHTML = '<p style="text-align: center; grid-column: 1 / -1;">Товары в этой категории временно отсутствуют</p>';
                return;
            }
            
            filteredProducts.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <div class="product-image">
                        <i class="fab fa-${product.category === 'vk' ? 'vk' : 'telegram'}"></i>
                        <div class="country-flag">${product.country}</div>
                        <div class="account-type">${product.type}</div>
                    </div>
                    <div class="product-info">
                        <div class="product-title">${product.name}</div>
                        <div class="product-description">${product.description}</div>
                        <div class="product-price">${product.price} ₽</div>
                        <button class="add-to-cart" data-id="${product.id}">В корзину</button>
                    </div>
                `;
                productsContainer.appendChild(productCard);
            });
            
            // Добавляем обработчики событий для кнопок "В корзину"
            document.querySelectorAll('.add-to-cart').forEach(button => {
                button.addEventListener('click', (e) => {
                    if (!currentUser) {
                        alert('Для добавления товаров в корзину необходимо войти в аккаунт');
                        loginForm.classList.add('active');
                        return;
                    }
                    
                    const productId = parseInt(e.target.dataset.id);
                    const product = products.find(p => p.id === productId);
                    
                    if (product) {
                        addToCart(product);
                        alert(`Товар "${product.name}" добавлен в корзину!`);
                    }
                });
            });
        }
        
        // Обновление корзины
        function updateCartUI() {
            cartItems.innerHTML = '';
            let total = 0;
            
            if (cart.length === 0) {
                cartItems.innerHTML = `
                    <div class="empty-cart">
                        <i class="fas fa-shopping-cart"></i>
                        <h3>Корзина пуста</h3>
                        <p>Добавьте товары из каталога</p>
                    </div>
                `;
            } else {
                cart.forEach(item => {
                    const itemTotal = item.price * item.quantity;
                    total += itemTotal;
                    
                    const cartItem = document.createElement('div');
                    cartItem.className = 'cart-item';
                    cartItem.innerHTML = `
                        <div class="cart-item-details">
                            <div class="cart-item-title">${item.name}</div>
                            <div class="cart-item-price">${item.price} ₽ x ${item.quantity}</div>
                        </div>
                        <div class="cart-item-actions">
                            <div class="quantity-control">
                                <button class="quantity-btn decrease" data-id="${item.id}">-</button>
                                <span class="quantity">${item.quantity}</span>
                                <button class="quantity-btn increase" data-id="${item.id}">+</button>
                            </div>
                            <button class="remove-item" data-id="${item.id}">&times;</button>
                        </div>
                    `;
                    cartItems.appendChild(cartItem);
                });
                
                // Добавляем обработчики событий для кнопок в корзине
                document.querySelectorAll('.decrease').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        const id = parseInt(e.target.dataset.id);
                        decreaseQuantity(id);
                    });
                });
                
                document.querySelectorAll('.increase').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        const id = parseInt(e.target.dataset.id);
                        increaseQuantity(id);
                    });
                });
                
                document.querySelectorAll('.remove-item').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        const id = parseInt(e.target.dataset.id);
                        removeFromCart(id);
                    });
                });
            }
            
            cartTotal.textContent = `${total} ₽`;
            updateCartBadge();
        }
        
        // Загрузка таблицы пользователей для админа
        function loadUsersTable() {
            usersTableBody.innerHTML = '';
            
            users.forEach(user => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${user.id}</td>
                    <td>${user.name}</td>
                    <td>${user.email}</td>
                    <td>${user.registrationDate}</td>
                    <td><span class="status active">Активен</span></td>
                `;
                usersTableBody.appendChild(row);
            });
        }
        
        // Загрузка заказов для админа
        function loadAdminOrders() {
            adminOrders.innerHTML = '';
            
            if (orders.length === 0) {
                adminOrders.innerHTML = '<p>Нет активных заказов</p>';
                return;
            }
            
            orders.forEach(order => {
                const orderElement = document.createElement('div');
                orderElement.className = 'order-item';
                orderElement.style.padding = '15px';
                orderElement.style.border = '1px solid #ddd';
                orderElement.style.borderRadius = '8px';
                orderElement.style.marginBottom = '10px';
                
                let itemsHtml = '';
                order.items.forEach(item => {
                    itemsHtml += `<div>${item.name} - ${item.quantity} шт. x ${item.price} ₽</div>`;
                });
                
                orderElement.innerHTML = `
                    <h4>Заказ #${order.id} от ${order.date}</h4>
                    <div>Пользователь: ${order.userName} (${order.userEmail})</div>
                    <div>Товары: ${itemsHtml}</div>
                    <div>Общая сумма: ${order.total} ₽</div>
                    <div>Статус: ${order.status}</div>
                    ${order.screenshot ? `<div>Скриншот оплаты: <a href="${order.screenshot}" target="_blank">Просмотр</a></div>` : ''}
                    <button class="btn" style="margin-top: 10px;" onclick="confirmOrder(${order.id})">Подтвердить заказ</button>
                `;
                
                adminOrders.appendChild(orderElement);
            });
        }
        
        // Загрузка истории заказов для пользователя
        function loadOrdersHistory() {
            ordersHistory.innerHTML = '';
            
            if (!currentUser) return;
            
            const userOrders = orders.filter(order => order.userId === currentUser.id);
            
            if (userOrders.length === 0) {
                ordersHistory.innerHTML = `
                    <div class="empty-cart">
                        <i class="fas fa-clipboard-list"></i>
                        <h3>Заказов пока нет</h3>
                        <p>После оформления заказа они появятся здесь</p>
                    </div>
                `;
                return;
            }
            
            userOrders.forEach(order => {
                const orderElement = document.createElement('div');
                orderElement.className = 'order-item';
                
                let itemsHtml = '';
                order.items.forEach(item => {
                    itemsHtml += `
                        <div class="order-item-product">
                            <span>${item.name}</span>
                            <span>${item.quantity} шт. x ${item.price} ₽ = ${item.quantity * item.price} ₽</span>
                        </div>
                    `;
                });
                
                orderElement.innerHTML = `
                    <div class="order-header">
                        <div class="order-id">Заказ #${order.id}</div>
                        <div class="order-date">${order.date}</div>
                    </div>
                    <div class="order-status ${order.status === 'Подтвержден' ? 'confirmed' : ''}">${order.status}</div>
                    <div class="order-items">
                        ${itemsHtml}
                    </div>
                    <div class="order-total">Итого: ${order.total} ₽</div>
                    ${order.chatId ? `<button class="btn" style="margin-top: 10px;" onclick="openChat(${order.chatId})">Открыть чат</button>` : ''}
                `;
                
                ordersHistory.appendChild(orderElement);
            });
        }
        
        // Функции корзины
        function addToCart(product) {
            const existingItem = cart.find(item => item.id === product.id);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({
                    id: product.id,
                    name: product.name,
                    price: product.price,
                    quantity: 1
                });
            }
            
            localStorage.setItem('cart', JSON.stringify(cart));
            updateCartUI();
        }
        
        function increaseQuantity(id) {
            const item = cart.find(item => item.id === id);
            if (item) {
                item.quantity += 1;
                localStorage.setItem('cart', JSON.stringify(cart));
                updateCartUI();
            }
        }
        
        function decreaseQuantity(id) {
            const item = cart.find(item => item.id === id);
            if (item) {
                item.quantity -= 1;
                if (item.quantity <= 0) {
                    removeFromCart(id);
                } else {
                    localStorage.setItem('cart', JSON.stringify(cart));
                    updateCartUI();
                }
            }
        }
        
        function removeFromCart(id) {
            cart = cart.filter(item => item.id !== id);
            localStorage.setItem('cart', JSON.stringify(cart));
            updateCartUI();
        }
        
        // Функции авторизации
        function login() {
            const email = document.getElementById('login-email').value;
            const password = document.getElementById('login-password').value;
            
            const user = users.find(u => u.email === email && u.password === password);
            
            if (user) {
                currentUser = user;
                localStorage.setItem('currentUser', JSON.stringify(currentUser));
                updateAuthUI();
                loginForm.classList.remove('active');
                alert(`Добро пожаловать, ${user.name}!`);
            } else {
                alert('Неверный email/telegram или пароль');
            }
        }
        
        function register() {
            const name = document.getElementById('register-name').value;
            const email = document.getElementById('register-email').value;
            const password = document.getElementById('register-password').value;
            const passwordConfirm = document.getElementById('register-password-confirm').value;
            
            if (password !== passwordConfirm) {
                alert('Пароли не совпадают');
                return;
            }
            
            if (users.find(u => u.email === email)) {
                alert('Пользователь с таким email/telegram уже существует');
                return;
            }
            
            const newUser = {
                id: users.length + 1,
                name,
                email,
                password,
                registrationDate: new Date().toLocaleDateString('ru-RU'),
                isAdmin: false
            };
            
            users.push(newUser);
            localStorage.setItem('users', JSON.stringify(users));
            
            currentUser = newUser;
            localStorage.setItem('currentUser', JSON.stringify(currentUser));
            
            updateAuthUI();
            loadUsersTable();
            registerForm.classList.remove('active');
            alert('Регистрация прошла успешно!');
        }
        
        function logout() {
            currentUser = null;
            localStorage.removeItem('currentUser');
            updateAuthUI();
            alert('Вы вышли из аккаунта');
        }
        
        // Навигация по страницам
        function handleNavClick(e) {
            e.preventDefault();
            const page = e.target.dataset.page;
            
            // Сбрасываем активные классы
            navLinks.forEach(nav => {
                if (nav.dataset.page) {
                    nav.classList.remove('active');
                }
            });
            e.target.classList.add('active');
            
            showPage(page);
        }
        
        function showPage(page) {
            // Скрываем все страницы
            homePage.style.display = 'none';
            productsPage.style.display = 'none';
            cartPage.style.display = 'none';
            ordersPage.style.display = 'none';
            contactsPage.style.display = 'none';
            reviewsPage.style.display = 'none';
            faqPage.style.display = 'none';
            paymentPage.style.display = 'none';
            chatPage.style.display = 'none';
            adminPage.style.display = 'none';
            
            // Показываем выбранную страницу
            switch(page) {
                case 'home':
                    homePage.style.display = 'block';
                    break;
                case 'products':
                    if (!currentUser) {
                        alert('Для просмотра товаров необходимо войти в аккаунт');
                        loginForm.classList.add('active');
                        return;
                    }
                    productsPage.style.display = 'block';
                    break;
                case 'cart':
                    if (!currentUser) {
                        alert('Для просмотра корзины необходимо войти в аккаунт');
                        loginForm.classList.add('active');
                        return;
                    }
                    cartPage.style.display = 'block';
                    break;
                case 'orders':
                    if (!currentUser) {
                        alert('Для просмотра заказов необходимо войти в аккаунт');
                        loginForm.classList.add('active');
                        return;
                    }
                    ordersPage.style.display = 'block';
                    loadOrdersHistory();
                    break;
                case 'contacts':
                    contactsPage.style.display = 'block';
                    break;
                case 'reviews':
                    reviewsPage.style.display = 'block';
                    break;
                case 'faq':
                    faqPage.style.display = 'block';
                    break;
                case 'admin':
                    if (!currentUser || !currentUser.isAdmin) {
                        alert('У вас нет доступа к админ-панели');
                        return;
                    }
                    adminPage.style.display = 'block';
                    break;
                default:
                    homePage.style.display = 'block';
            }
        }
        
        // Оформление заказа
        function checkout() {
            if (cart.length === 0) {
                alert('Корзина пуста');
                return;
            }
            
            // Обновляем информацию о заказе
            orderItems.innerHTML = '';
            let total = 0;
            
            cart.forEach(item => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                
                const orderItem = document.createElement('div');
                orderItem.innerHTML = `${item.name} - ${item.quantity} шт. x ${item.price} ₽ = ${itemTotal} ₽`;
                orderItems.appendChild(orderItem);
            });
            
            orderTotal.textContent = `${total} ₽`;
            
            // Переходим на страницу оплаты
            showPage('payment');
        }
        
        // Подтверждение оплаты
        function confirmPayment() {
            if (!paymentScreenshot.files[0]) {
                alert('Пожалуйста, загрузите скриншот оплаты');
                return;
            }
            
            // Создаем заказ
            const orderId = orders.length + 1;
            const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            
            const order = {
                id: orderId,
                userId: currentUser.id,
                userName: currentUser.name,
                userEmail: currentUser.email,
                items: [...cart],
                total: total,
                date: new Date().toLocaleString('ru-RU'),
                status: 'Ожидает подтверждения',
                screenshot: URL.createObjectURL(paymentScreenshot.files[0]),
                chatId: orderId
            };
            
            orders.push(order);
            localStorage.setItem('orders', JSON.stringify(orders));
            
            // Создаем чат для этого заказа
            if (!chats[orderId]) {
                chats[orderId] = [
                    {
                        sender: 'admin',
                        text: 'Здравствуйте! Ожидаю ваш скриншот оплаты для подтверждения заказа.',
                        time: new Date().toLocaleString('ru-RU')
                    }
                ];
                localStorage.setItem('chats', JSON.stringify(chats));
            }
            
            // Очищаем корзину
            cart = [];
            localStorage.setItem('cart', JSON.stringify(cart));
            updateCartUI();
            
            // Переходим в чат
            showPage('chat');
            
            // Загружаем сообщения чата
            loadChatMessages(orderId);
            
            alert('Заказ оформлен! Ожидайте подтверждения оплаты в чате с менеджером.');
        }
        
        // Загрузка сообщений чата
        function loadChatMessages(orderId) {
            chatMessages.innerHTML = '';
            
            if (chats[orderId]) {
                chats[orderId].forEach(message => {
                    const messageElement = document.createElement('div');
                    messageElement.className = `message ${message.sender}`;
                    messageElement.innerHTML = `
                        <strong>${message.sender === 'admin' ? 'Менеджер' : currentUser.name}:</strong> ${message.text}
                        <div style="font-size: 0.8rem; color: #666; margin-top: 5px;">${message.time}</div>
                    `;
                    chatMessages.appendChild(messageElement);
                });
            }
            
            // Прокручиваем вниз
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }
        
        // Отправка сообщения
        function sendMessage() {
            const messageText = chatInput.value.trim();
            if (!messageText) return;
            
            // Находим активный заказ (последний заказ пользователя)
            const userOrders = orders.filter(order => order.userId === currentUser.id);
            if (userOrders.length === 0) return;
            
            const lastOrder = userOrders[userOrders.length - 1];
            const orderId = lastOrder.id;
            
            // Добавляем сообщение в чат
            if (!chats[orderId]) {
                chats[orderId] = [];
            }
            
            const newMessage = {
                sender: 'user',
                text: messageText,
                time: new Date().toLocaleString('ru-RU')
            };
            
            chats[orderId].push(newMessage);
            localStorage.setItem('chats', JSON.stringify(chats));
            
            // Очищаем поле ввода
            chatInput.value = '';
            
            // Обновляем чат
            loadChatMessages(orderId);
        }
        
        // Функции для админа
        window.confirmOrder = function(orderId) {
            const order = orders.find(o => o.id === orderId);
            if (order) {
                order.status = 'Подтвержден';
                localStorage.setItem('orders', JSON.stringify(orders));
                loadAdminOrders();
                alert('Заказ подтвержден!');
            }
        };
        
        // Функция для открытия чата из истории заказов
        window.openChat = function(orderId) {
            showPage('chat');
            loadChatMessages(orderId);
        };
        
        // Инициализация при загрузке страницы
        document.addEventListener('DOMContentLoaded', initApp);
    </script>
</body>
</html>
